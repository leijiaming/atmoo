<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/bg"
        android:layout_width="0pt"
        android:layout_height="368pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/browsecount"
        android:layout_width="100pt"
        android:layout_height="42pt"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        android:gravity="center"
        android:background="#33000000"
        android:textColor="#ffffff"
        android:textSize="28pt"
        />
    <TextView
        android:id="@+id/vediotime"
        android:layout_width="100pt"
        android:layout_height="42pt"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:gravity="center"
       android:textSize="28pt"
        android:background="#33000000"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20pt"
        android:layout_marginBottom="44pt"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        android:textColor="#333333"
        android:textSize="28pt"
        />
    <ImageView
        android:id="@+id/share"
        android:layout_width="40pt"
        android:layout_height="40pt"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:src="@drawable/share"
        app:layout_constraintTop_toBottomOf="@id/bg"
        android:layout_marginTop="20pt"

        />
    <ImageView
        android:id="@+id/like"
        android:layout_width="40pt"
        android:layout_height="40pt"
        app:layout_constraintRight_toLeftOf="@id/share"
        android:layout_marginRight="30pt"
        android:src="@drawable/like"
        app:layout_constraintTop_toBottomOf="@id/bg"
        android:layout_marginTop="20pt"
        />
    <ImageView
        android:id="@+id/subscribe"
        android:layout_width="40pt"
        android:layout_height="40pt"
        app:layout_constraintRight_toLeftOf="@id/like"
        android:layout_marginRight="30pt"
        android:src="@drawable/subscribe"
        app:layout_constraintTop_toBottomOf="@id/bg"
        android:layout_marginTop="20pt"
        />

</android.support.constraint.ConstraintLayout>